<?xml version='1.0'?>
<!DOCTYPE platform SYSTEM "http://simgrid.gforge.inria.fr/simgrid/simgrid.dtd">
<platform version="4.1">
  <!--
    		   <global links>			<global links>
				 _____|____				 _____|____
                |          |			|          |
                | ElecSwt  |			|  OptSwt  |			(ONLY 1 ElecSwt and 1 OptSwt)
                |__________|			|__________|
					 |	\		...			/  |		
					 |	   \			 /     |		
					 |	     \ 		  /        |		
					 |	       \	/   	   |		
					 |	         \/   		   |		
					 |	        /   \  		   |		
					 |	      /  	  \	 	   |		
    			 ____|_____	/			\______|___
                |          |			|          |
                |   ToR1   |			|   TOR2   |			....
                |__________|			|__________|
                    / | \	\				/ | \	\
                   /  |  \	 \		       /  |  \	 \
               l0 / l1|   \l2 \l3	   20 / 21|   \22 \23
                 /    |    \   \		 /    |    \   \
                /     |     \	\		/     |     \	\
           node0   node1  node2 node3 node4  node5 node6 node7   ... ...    
	    
    All hosts can communicate at full speed with no interference on
    the crossbar. Only the links of each hosts are limiting.	    
  -->
  <zone id="world" routing="Full">
  <!--  //Parameter format: Node per TOR|TOR|ELEC|TOR-OPT
  //TOR: TOR switch latency, {node-TOR link latency},{node-TOR link banwidth}
  //ELEC: TOR-ELEC link latency, TOR-ELEC link bandwidth, ELEC switch latency
  //OPT: TOR-OPT link latency, TOR-OPT link bandwidth, OPT switchi latency, OPT init latency (circuit switching))-->
    <cluster id="cluster" topology="OPT_ELEC_SIMPLE" topo_parameters="1|0.1us|0s,10GBps,0.1us|0s,100GBps,0us,0.2us"
             prefix="node-" radical="0-32" suffix=".simgrid.org"
	     speed="1Gf" bw="100GBps" lat="0"
             loopback_bw="1000GBps" loopback_lat="0s"/>
  </zone>
</platform>
